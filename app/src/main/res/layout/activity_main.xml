<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backwall2"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"

            android:text="Weather"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/white"
            android:letterSpacing="0.3"

            android:textSize="40dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"


            android:weightSum="5">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idTIcity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="4.5"
                android:background="@color/transperent"
                android:hint="Enter City Name"
                app:endIconMinSize="5dp"


                android:textColorHint="@color/white"
                app:hintTextColor="@color/white"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idEDcity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transperent"


                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/white"

                    android:textSize="20dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/idIVSearch"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@color/transperent"

                android:onClick="get"
                android:src="@drawable/baseline_search_24"
                app:tint="@color/white"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="203dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:background="@drawable/backwhitw"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="5"
                >


                <ImageView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/transperent"
                    android:src="@drawable/locat"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/currentloc"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_weight="4.5"
                    android:textColor="@color/white"

                    android:text="Your Location" />


            </LinearLayout>







            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="Â°c"
                android:textColor="@color/white"
                android:onClick="change"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/currenttime"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textStyle="bold"

                android:textColor="@color/white"

                android:text="12:00 pm" />



            <ImageView
                android:id="@+id/idIVIcon"
                android:layout_width="87dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:background="@drawable/blackgrade"
                android:src="@drawable/wet" />

            <TextView
                android:id="@+id/tvicooon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Condition"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                app:tint="@color/white"

                android:src="@drawable/sunrise" />

            <TextView
                android:id="@+id/sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:hint="12:00pm"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20dp" />


            <ImageView
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center"
                android:src="@drawable/sunset"


                app:tint="@color/white" />

            <TextView
                android:id="@+id/sunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:hint="03:00am"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20dp" />


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                app:tint="@color/white"

                android:src="@drawable/wind" />

            <TextView
                android:id="@+id/tvicn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:hint="25km"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20dp" />


            <ImageView
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center"
                android:src="@drawable/humidity1"


                app:tint="@color/white" />

            <TextView
                android:id="@+id/humi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:hint="52%"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20dp" />


        </LinearLayout>










        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/backwhitw"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:textSize="28dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.1"

                android:textStyle="bold"
                android:text="Air Quality" />

            <TextView
                android:id="@+id/co"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="center"
                android:hint="Air Details"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>